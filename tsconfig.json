{
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "esnext",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "lib": [
      "dom",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
